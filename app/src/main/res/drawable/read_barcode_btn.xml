<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/pink_700" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/pink_300" android:startColor="@color/pink_500" />
                    <stroke android:width="1dp" android:color="@color/pink_500" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>

            <!-- SHADOW LAYER -->
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/blue_700" />
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="2dp" android:left="2dp">

                <shape>
                    <gradient android:angle="270"
                        android:endColor="@color/blue_300" android:startColor="@color/blue_500" />
                    <stroke android:width="1dp" android:color="@color/blue_500" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>