<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="palarax.e_key_card.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <!--- put content here -->
        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change profile details"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/grey_400"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"/>

        <EditText
            android:id="@+id/change_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="@string/reg_username_hint"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:alpha=".5"
            android:layout_below="@id/change_name"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginEnd="40dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/change_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Email"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/grey_400"
            android:layout_below="@+id/change_name_text"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/change_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="@string/reg_email_hint"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:alpha=".5"
            android:layout_below="@id/change_email"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginEnd="40dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/change_pwd_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Password"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/grey_400"
            android:layout_below="@+id/change_email_text"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/change_pwd_old_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="@string/reg_password_hint"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:alpha=".5"
            android:layout_below="@id/change_pwd_old"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginEnd="40dp"
            android:paddingBottom="15dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/change_pwd_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/grey_400"
            android:layout_below="@+id/change_pwd_old_text"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/change_pwd_new_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="@string/reg_password_hint"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:alpha=".5"
            android:layout_below="@id/change_pwd_new"
            android:layout_alignStart="@+id/change_name"
            android:layout_marginEnd="40dp"
            android:paddingBottom="15dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/change_name_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/read_barcode_btn"
            android:text="Change Name"
            android:textSize="18sp"
            android:layout_below="@id/change_pwd_new_text"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/change_email_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/read_barcode_btn"
            android:text="Change Email"
            android:textSize="18sp"
            android:layout_below="@id/change_pwd_new_text"
            android:layout_toRightOf="@id/change_name_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp" />

        <Button
            android:id="@+id/change_pwd_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/read_barcode_btn"
            android:text="Change Pwd"
            android:textSize="18sp"
            android:layout_below="@id/change_pwd_new_text"
            android:layout_toRightOf="@id/change_email_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp" />

        </RelativeLayout>

</FrameLayout>