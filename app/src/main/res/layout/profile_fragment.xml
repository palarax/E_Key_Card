<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="palarax.e_key_card.MainActivity"
        tools:showIn="@layout/app_bar_main">

        <TextView
            android:id="@+id/change_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Change options"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/change_name_btn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/read_barcode_btn"
            android:text="Change Name"
            android:textSize="18sp"
            android:layout_below="@id/change_sign"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
             />

        <Button
            android:id="@+id/change_email_btn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/read_barcode_btn"
            android:text="Change Email"
            android:textSize="18sp"
            android:layout_below="@id/change_sign"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
             />

        <Button
            android:id="@+id/change_pwd_btn"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/read_barcode_btn"
            android:text="Change Pwd"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/change_name_btn"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/btn4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/read_barcode_btn"
            android:text="test"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/change_email_btn"
            android:layout_marginTop="40dp"
             />

    </RelativeLayout>

</FrameLayout>