<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        tools:context="palarax.e_key_card.MainActivity"
        tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tagID"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ID"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tagID_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="@string/ID_text"
            android:layout_alignBaseline="@+id/tagID"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tagID" />

        <TextView
            android:id="@+id/techList"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tagID"
            android:layout_alignEnd="@+id/tagID"
            android:textColor="@android:color/white"
            android:text="@string/tech"/>

        <TextView
            android:id="@+id/techList_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="@string/tech_text"
            android:layout_alignBaseline="@+id/techList"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/techList" />

        <TextView
            android:id="@+id/tagType"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagType"
            android:textColor="@android:color/white"
            android:layout_below="@+id/techList"
            android:layout_alignEnd="@+id/techList" />

        <TextView
            android:id="@+id/tagType_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="@string/tagType_text"
            android:layout_alignBaseline="@+id/tagType"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tagType" />

        <TextView
            android:id="@+id/tag_write"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tag_write"
            android:textColor="@android:color/white"
            android:layout_below="@+id/tagType"
            android:layout_alignEnd="@+id/tagType" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>